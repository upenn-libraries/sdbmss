<script type="text/javascript">
$(document).ready(function() {
    SDBM.setPageFullWidth();
});
</script>    

<h1>Queued Jobs</h1>

<% if @jobs.count == 0 %>
    There are no queued jobs.
<% else %>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Run At</th>
                <th>Queue</th>
                <th>Handler</th>
                <th>Args</th>
                <th>Attempts</th>
                <th>Last Error</th>
                <th>Locked At</th>
                <th>Locked By</th>
            </tr>
        </thead>
        <tbody>                
        <% @jobs.each do |job| %>
            <% handler = YAML.load(job.handler) %>
            <tr>
                <td><%= job.id %></td>
                <td><%= job.run_at %></td>
                <td><%= job.queue %></td>
                <td><%= handler.job_data["job_class"] %></td>
                <td><%= handler.job_data["arguments"].to_s.truncate(30) %></td>
                <td><%= job.attempts %></td>
                <td><%= job.last_error %></td>
                <td><%= job.locked_at %></td>
                <td><%= job.locked_by %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
    
<% end %>

