<%= form_tag(request.path, method: :get, class: "form-inline form-horizontal search-form sdbmss-form") do %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-4">
                        <span class="h3">Search
                        </span>
                    </div>
                    <div class="col-xs-8 text-right">
                        <% if can? :manage, model_class %>
                            <label class="checkbox-inline">
                                <%= check_box_tag :unapproved_only, 1, params[:unapproved_only] %> Limit to records needing approval
                            </label>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="panel-body search">
                <div class="row search-fieldset">
                    <div class="col-sm-12">
                        <button type='button' class="btn btn-xs btn-warning search-remove form-control inline-left"> <span class="glyphicon glyphicon-remove"></span> </button><%= text_field_tag :search_value, params[:search_value], size: 26, placeholder: "Enter your search term...", class: "form-control inline-middle" %><select class="form-control inline-right inline-select" name="search_field">
                        <%- search_fields_for_advanced_search.sort.each do |key, field_def| -%>
                            <option value="<%= key %>"><%= field_def.label %></option>
                        <%- end -%>
                        </select>
