<h1>History of changes to <%= @entry.public_id %></h1>

<table class="table"> 
    <thead>
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Field</th>
            <th>Old Value</th>
            <th>New Value</th>
        </tr>
    </thead>
    <tbody>
        <% EntryHistory.new(@entry).changesets.each do |changeset| %>
        <tr>
            <td><%= changeset.date %></td>
            <td><%= changeset.user %></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        <% changeset.changes.each do |change| %>
        <tr>
            <td></td>
            <td></td>
            <td><%= change[:field] %></td>
            <td><%= change[:values].first %></td>
            <td><%= change[:values].second %></td>
        </tr> 
       <% end %>
       <% end %>
    </tbody>
</table>
