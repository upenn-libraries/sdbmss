<div class='panel panel-primary'>
    <div class='panel-heading'>
        <h3 class='h3'>Merge <%= @model.public_id %> &#10132; <%= @target.present? ? @target.public_id : "???" %></h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-5">
        <div class='panel <%= @target.present? ? "panel-danger" : "panel-default" %>'>
            <div class='panel-heading'><b><%= @model.public_id %> <%= @target.present? ? "(Will be deleted)" : "" %></b></div>
            <%= %>
            <%= render partial: "shared/name_main", locals: { name: @model } %>
        </div>
    </div>
    <div class='col-sm-2'>
        <span class="chevron">âž”</span>
    </div>
    <div class="col-sm-5">
        <% if @target_id.present? && @target.present? %>
            <div class='panel <%= @target.present? ? "panel-success" : "panel-default" %>'>
                <div class='panel-heading'><b><%= @target.public_id %></b></div>
                <%= render partial: "shared/name_main", locals: { name: @target } %>
            </div>
        <% else %>
            <% if @target_id.present? %>
                <div class='panel panel-danger'>
                <% if @warning.present? %>
                    <div class="panel-heading"><%= @warning %></div>
                <% else %>
                    <div class="panel-heading">Could not find record #<%= @target_id %></div>
                <% end %>
                </div>
            <% end %>
            <%= form_tag(request.path, method: :get, class: "form-horizontal sdbmss-form") do %>
                <div class="row">
                    <label class="col-sm-3 control-label">Find by unique ID</label>
                    <div class="col-sm-6">
                        <input type="text" name="target_id" class="form-control"></p>
                    </div>
                    <div class="col-sm-3">
                        <button class="btn btn-primary">Select</button>
                    </div>
                </div>
            <% end %>
            <div class='panel panel-default'>
                <% if @similar.present? %>
                    <div class='panel-heading'><b>Suggestions</b></div>
                    <table class='table table-striped'>
                        <thead>
                            <tr>
                                <th>Merge</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Aut.</th>
                                <th>Art.</th>
                                <th>Scr.</th>
                                <th>Sale</th>
                                <th>Pr.</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @similar.each do |nm| %>
                                <% if nm.id != @model.id %>
                                <tr>
                                    <td><a class='btn btn-primary' href="<%= name_path(id: @model.id)%>/merge?target_id=<%= nm.id %>">Select</a></td>
                                    <td><%= nm.id %></td>
                                    <td><%= nm.name %></td>
                                    <td><%= nm.authors_count %></td>
                                    <td><%= nm.artists_count %></td>
                                    <td><%= nm.scribes_count %></td>
                                    <td><%= nm.sale_agents_count %></td>
                                    <td><%= nm.provenance_count %></td>
                                </tr>
                                <% end %>
                            <% end %>
                        </tbody>
                    </table>
                <% else %>
                    <b>No suggested names found, use manual search above.</b>
                <% end %>
            </div>
        <% end %>
    </div>
</div>

<% if @target.present? %>
<div class="row">
    <div class="col-sm-12">
        <div><b>Confirm</b></div>
        <p>Are you sure you want to do this? <%= @model.public_id %> will be marked as deleted and its fields cleared out.</p>
    </div>
</div>

<%= form_tag(request.path, method: :post, class: "form-horizontal sdbmss-form") do %>
    <input type="hidden" name="confirm" value="yes"/>
    <input type="hidden" name="target_id" value="<%= @target.id %>"/>
    <div class="row">
        <div class="col-sm-3">
            <button class="btn btn-primary">Yes</button>
            <a class="btn btn-warning" href="<%= names_path %>">Cancel</a>
        </div>
    </div>
<% end %>

<% end %>
