
<h3>Merge <%= @model.public_id %> &#10132; <%= @target.present? ? @target.public_id : "???" %></h3>

<div class="row">
    <div class="col-sm-6">
        <div><b><%= @model.public_id %></b></div>
        <%= %>
        <%= render partial: "shared/name_main", locals: { name: @model } %>
    </div>
    <div class="col-sm-6">
        <% if @target_id.present? && @target.present? %>
            <div><b><%= @target.public_id %></b></div>
            <%= render partial: "shared/name_main", locals: { name: @target } %>
        <% else %>
            <% if @target_id.present? %>
                <p style="color: red;">Could not find record #<%= @target_id %></p>
            <% end %>
            <%= form_tag(request.path, method: :get, class: "form-horizontal sdbmss-form") do %>
                <div class="row">
                    <label class="col-sm-6 control-label text-right">Merge this record into</label>
                    <div class="col-sm-6">
                        <input type="text" name="target_id" class="form-control"></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-6">
                        <button class="btn btn-primary">Show</button>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>

<% if @target.present? %>
<div class="row">
    <div class="col-sm-12">
        <div><b>Confirm</b></div>
        <p>Are you sure you want to do this? <%= @model.public_id %> will be marked as deleted and its fields cleared out.</p>
    </div>
</div>

<%= form_tag(request.path, method: :post, class: "form-horizontal sdbmss-form") do %>
    <input type="hidden" name="confirm" value="yes"/>
    <input type="hidden" name="target_id" value="<%= @target.id %>"/>
    <div class="row">
        <div class="col-sm-3">
            <button class="btn btn-primary">Yes</button>
            <a class="btn btn-warning" href="<%= names_path %>">Cancel</a>
        </div>
    </div>
<% end %>

<% end %>
