<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
        
        <div class="row">
            <div class="col-sm-12">
                <h1><%= @name.public_id %></h1>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2"><b>Name Details</b></th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td class="col-sm-2 text-right record-label">Name</td>
                    <td class="col-sm-10">
                        <%= @name.name %>
                    </td>
                </tr>

                <% if @name.viaf_id.present? %>
                <tr>
                    <td class="col-sm-2 text-right record-label">VIAF ID</td>
                    <td class="col-sm-10">
                        <a href="http://viaf.org/viaf/<%= @name.viaf_id %>/"><%= @name.viaf_id %></a>
                    </td>
                </tr>
                <% end %>

                <tr>
                    <td class="col-sm-2 text-right record-label"># Entries</td>
                    <td class="col-sm-10">
                        <% if @name.authors_count || 0 > 0 %>
                        This name is listed as the author of <a href="<%= search_by_facet_value('author', @name.name) %>"><%= @name.authors_count %> entries</a>.<br/><br/>
                        <% end %>

                        <% if @name.artists_count || 0 > 0 %>
                        This name is listed as the artist of <a href="<%= search_by_facet_value('artist', @name.name) %>"><%= @name.artists_count %> entries</a>.<br/><br/>
                        <% end %>

                        <% if @name.scribes_count || 0 > 0 %>
                        This name is listed as the scribe of <a href="<%= search_by_facet_value('scribe', @name.name) %>"><%= @name.scribes_count %> entries</a>.<br/><br/>
                        <% end %>

                        <% if @name.source_agents_count || 0 > 0 %>
                        This name is listed in <%= @name.source_agents_count %> sources</a>.<br/><br/>
                        <% end %>
                        
                        <% if @name.event_agents_count || 0 > 0 %>
                        This name is listed in <%= @name.event_agents_count %> transactions</a>.<br/><br/>
                        <% end %>
                        
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

</div>
