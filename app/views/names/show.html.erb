<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
        
        <div class="row">
            <div class="col-sm-12">
                <h1><%= @name.public_id %></h1>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2"><b>Name Details</b></th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td class="col-sm-2 text-right record-label">Name</td>
                    <td class="col-sm-10">
                        <%= @name.name %>
                    </td>
                </tr>

                <% if @name.viaf_id.present? %>
                <tr>
                    <td class="col-sm-2 text-right record-label">VIAF ID</td>
                    <td class="col-sm-10">
                        <a href="http://viaf.org/viaf/<%= @name.viaf_id %>/"><%= @name.viaf_id %></a>
                    </td>
                </tr>
                <% end %>

                <tr>
                    <td class="col-sm-2 text-right record-label"># Entries</td>
                    <td class="col-sm-10">
                        This entity is the author of <a href="<%= search_by_facet_value('author', @name.name) %>"><%= Entry.with_author(@name).count %> entries</a> in the database.
                    </td>
                </tr>

                <!-- TODO: show number of entries with this name as artist, scribe, agent -->
                
                <tr>
                    <td class="col-sm-2 text-right record-label"></td>
                    <td class="col-sm-10">
                        TODO: Other details will be displayed here eventually.
                    </td>
                </tr>

            </tbody>
        </table>

    </div>

</div>
