<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Users</th>
      <th>Records</th>
      <th>Public</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if groups.count <= 0 %>
    <tr>
      <td class="text-center" colspan="4">  You do not have any user groups.</td>
    </tr>
    <% end %>
    <% groups.each do |group| %>
    <tr>
      <td><%= link_to group.name, group_path(group) %></td>
      <td><%= group.users.count %></td>
      <td><%= group.entries.count %></td>
      <td><%= group.public %></td>
      <td class='text-right'>
        <% if can?(:edit, group) %>
          <%= link_to(group_path(group, format: 'html'),  method: :delete, data: { confirm: 'Are you sure?' }) do %>
            <span class="glyphicon glyphicon-remove"></span> Delete
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
