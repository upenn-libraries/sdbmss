<div class="row">
  <div class="col-sm-12">
    <h2><%= @group.name %></h2>
    <p><strong># Records:</strong> <%= @group.entries.count %></p>
    <p><strong># Users:</strong> <%= @group.users.count %></p>
    <dl class="document-metadata dl-horizontal dl-invert">
        <dt style="white-space: normal;">
            <h3>Comments</h3>
            <p>Discuss activty in the group here.</p>
        </dt>
        <dd>
            <div class="spacer-40px"></div>
            <%= render partial: "comments/show_all", locals: {comments: @group.comments.where(public: true), record: @group} %>
        </dd>
    </dl>
  </div>
</div>