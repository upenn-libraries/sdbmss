<div class="navbar-header catalog-search-form">
  <%= form_tag sdbmss_search_action_path, :method => :get, :class => 'form-inline clearfix navbar-form', :style => 'width: 100%;' do %>
    <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)) %>

    <% unless search_fields.empty? %>
      <!--<label for="q" style="margin-right: 10px;"><%= t('blacklight.search.form.search_field.label') %> </label>-->
      <% if false %>
      <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"search_field form-control") %>
      <span class="sr-only"><%= t('blacklight.search.form.search_field.post_label') %></span>
      <% end %>
      <input type="hidden" name="search_field" value="all_fields"/>
    <% end %>
    <div class="row">
      <div class="col-xs-11">
        <div class="input-group" style="width: 100%;">
            <!--<label for="q" class="sr-only"><%= t('blacklight.search.form.q') %></label>-->
             <%= text_field_tag :q, params[:q], :placeholder => 'Search database...', :class => "search_q q form-control", :style => "width: 100%;", :id => "q", :autofocus => should_autofocus_on_search_box? %>

          <span class="input-group-btn" style="width: 1px;">
            <button type="submit" class="btn btn-primary search-btn" id="search">
              <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
              <span class="glyphicon glyphicon-search"></span>
            </button>
            <a type="button navbar-toggle" href="<%= main_app.advanced_search_path(params_for_search) %>" class="btn btn-default advanced_search">Advanced</a>
          </span>
        </div>
      </div>
      <div class="col-xs-1 text-center" style="padding: 0px">
        <a class='btn btn-blank navbar-toggle' data-toggle="collapse" data-target="#myNavbar">
          <span class="glyphicon glyphicon-option-horizontal"></span>                       
        </a>
      </div>
    </div>
  <% end %>
</div>  
<div class="collapse navbar-collapse catalog-search-info" id="myNavbar">
  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">My Searches <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t('blacklight.header_links.search_history'), main_app.search_history_path %></li>
            <li><%= link_to t('blacklight.header_links.saved_searches'), main_app.saved_searches_path %></li>
        </ul>
      </li>
    <% end %>
    <li>
      <a style="" href="<%= recent_additions_path %>" class="recent_additions">Recent<span class="hide-mobile-lg"> Additions</span></a>
    </li>
    <li>
      <a href="<%= thredded.root_path %>" target='_blank'><span class="hide-mobile-lg">Community</span> Discussion</a>
    </li>
  </ul>
</div>



