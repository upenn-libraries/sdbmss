<!-- I had to override the blacklight class anyway, just to make the "tools" not appear for deprecated records... -->
<%= render_document_main_content_partial %>
<!--<div id="content" class="<%= show_content_classes %>">
</div>-->
<% content_for :breadcrumbs do %>
  <%= render partial: "breadcrumbs", locals: {edit: false} %>
<% end %>

<% if !@entry.deprecated %>

    <% content_for :control_tools do %>
      <%= render_document_sidebar_partial %>
    <% end %>

    <% content_for :add_entry do %>
        <% if @entry.source %>
          <li><%= link_to "From #{@entry.source.public_id}", new_entry_path(source_id: @entry.source) %></li>
        <% end %>
        <% if @entry.manuscript %>
          <li><%= link_to "Link New Personal Observation", new_source_path({create_entry: 1, manuscript_id: @entry.manuscript.id, source_type: 4}) %></li>
        <% else %>
          <li><%= link_to "Link New Personal Observation", new_source_path({create_entry: 1, new_manuscript: true, original_entry: @entry.id, source_type: 4}) %></li>
        <% end %>
    <% end %>

<% end %>