<script type="text/javascript">

 $(document).ready(function() {

     var resourceName = "<%= resource_name %>";

     // flag = show all records, or only those that the user created
     <% if can? :manage, model_class  %>
     var showOnlyRecordsCreatedByUser = 0;
     <% else %>
     var showOnlyRecordsCreatedByUser = 1;
     <% end %>

     // Subclass of SDBM.ManageRecords tailored for display of mss
     var ManageManuscripts = function(options) {
         SDBM.ManageRecords.call(this, options);
     };

     ManageManuscripts.prototype = Object.create(SDBM.ManageRecords.prototype);

     ManageManuscripts.prototype.getColumns = function() {
        var manageManuscripts = this;

        return [
            {
                sdbmssMinWidth: "20px",
                sdbmssMaxWidth: "20px",
                title: '<a href="#" class="btn btn-primary btn-xs glyphicon glyphicon-unchecked" id="select-all"></a>',
                orderable: false,
                className: "text-center",
                render: function (data, type, full, meta) {
                    console.log(data, type, full, meta);
                    if(manageManuscripts.getUnreviewedOnly() === 1) {
                        return  '' + 
                                '<input class="table-checkbox" type="checkbox" name="review" value="' + full[manageManuscripts.dataTable.getColumnIndex("ID")] + '" id="checkbox_' + meta.row + '"/>' + 
                                '<label for="checkbox_' + meta.row + '">' + 
                                '<a class="btn btn-default btn-xs glyphicon glyphicon-unchecked unchecked"></a>' + 
                                '<a class="btn btn-default btn-xs glyphicon glyphicon-check checked"></a>' + 
                                '</label>' + '';
                    }
                    return '';
                }
            },
            {
                sdbmssMinWidth: "170px",
                sdbmssMaxWidth: "170px",
                title: 'Options',
                orderable: false,
                render: function (data, type, full, meta) {
                    var str = '<a href="/' + manageManuscripts.options.resourceName + '/' + data + '/edit/">Edit</a> '
                            + '&middot; <a class="delete-link" href="/' + manageManuscripts.options.resourceName + '/' + data + '.json">Delete</a>'
                            + '&middot; <a class="linking-tool-link" target="_blank" href="/linkingtool/manuscript/' + data + '">Linking Tool</a>';
                    return str;
                }
            },
            {
                sdbmssMinWidth: "130px",
                sdbmssMaxWidth: "130px",
                title: 'Manuscript ID',
                dbSortField: 'id',
                render: function (data, type, full, meta) {
                    var str = '<a target="_blank" href="/manuscripts/' + data + '/">SDBM_MS_' + data + '</a>';
                    return str;
                }
            },
            {
                sdbmssMinWidth: "400px",
                sdbmssMaxWidth: "400px",
                title: 'Common Name',
                dbSortField: 'name'
            },
            {
                sdbmssMinWidth: "200px",
                sdbmssMaxWidth: "200px",
                title: 'Last Known Location',
                dbSortField: 'location'
            },
            {
                sdbmssMinWidth: "100px",
                sdbmssMaxWidth: "100px",
                orderable: true,
                title: '# Entries',
                dbSortField: 'entries_count'
            },
            {
                sdbmssMinWidth: "90px",
                sdbmssMaxWidth: "90px",
                title: 'Reviewed',
                dbSortField: 'reviewed'
            },
            {
                sdbmssMinWidth: "130px",
                sdbmssMaxWidth: "130px",
                title: 'Created By',
                dbSortField: 'created_by_id'
            },
            {
                sdbmssMinWidth: "90px",
                sdbmssMaxWidth: "90px",
                title: 'Created At',
                dbSortField: 'created_at',
                orderable: false
            },
            {
                sdbmssMinWidth: "90px",
                sdbmssMaxWidth: "90px",
                title: 'Updated By',
                dbSortField: 'updated_by_id',
                orderable: false
            },
            {
                sdbmssMinWidth: "90px",
                sdbmssMaxWidth: "90px",
                title: 'Updated At',
                dbSortField: 'updated_at',
                orderable: false
            }
        ];
     };

     ManageManuscripts.prototype.searchResultToTableRow = function (result) {
         return [
             null,
             result.id,
             result.id,
             result.name,
             result.location,
             result.entries_count,
             result.reviewed.toString(),
             result.created_by || "",
             result.created_at || "",
             result.updated_by || "",
             result.updated_at || ""
         ];
     };

     ManageManuscripts.prototype.getButtonTextForAddNewRecord = function () {
         return null;
     };

     new ManageManuscripts({
         resourceName: "<%= resource_name %>",
         resourceNameSingular: "<%= resource_name.singularize %>",
         resourceNamePlural: "<%= resource_name.pluralize %>",
         showOnlyRecordsCreatedByUser: showOnlyRecordsCreatedByUser,
         searchNameField: "name"
     });

 });

</script>