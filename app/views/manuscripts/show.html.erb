<div class="row">
    <div class="col-sm-3">
        <div class="panel panel-default show-tools">
            <div class="panel-heading">
                Tools
            </div>
            <div class="panel-body">
                <ul class="nav">
                    <% if user_signed_in? %>
                    <li class="edit_entry">
                        <a href="<%= edit_manuscript_path(@manuscript.id) %>">Edit this manuscript</a>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        
        <div class="row">
            <div class="col-sm-12">
                <h2><%= @manuscript.get_public_id %></h2>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2">Manuscript Details</th>
                </tr>
            </thead>
            <tbody>

                <% if @manuscript.name.present? %>
                <tr>
                    <td class="col-sm-2 text-right record-label">Name</td>
                    <td class="col-sm-10">
                        <%= @manuscript.name %>
                    </td>
                </tr>
                <% end %>

                <% if @manuscript.current_location.present? %>
                <tr>
                    <td class="col-sm-2 text-right record-label">Current Location</td>
                    <td class="col-sm-10">
                        <%= @manuscript.current_location %>
                    </td>
                </tr>
                <% end %>

                <tr>
                    <td class="col-sm-2 text-right record-label"># Entries</td>
                    <td class="col-sm-10">
                        This manuscript has <a href="<%= search_by_facet_value('manuscript', @manuscript.get_public_id) %>"><%= @manuscript.entries.count %> entries</a> in the database.
                    </td>
                </tr>

            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2"><b>Composite provenance</b></th>
                </tr>
            </thead>
            <tbody>

                <% @manuscript.get_unique_provenance.each do |provenance| %>
                <tr>
                    <td class="col-sm-2 text-right record-label"><%= format_fuzzy_date(provenance.start_date)||"(no date)" %></td>
                    <td class="col-sm-10">
                        <% if (seller_or_holder = provenance.get_seller_or_holder).present? && seller_or_holder.agent.present? %>
                        <a href="<%= url_for seller_or_holder.agent %>"><%= seller_or_holder.agent.name %></a><br/>
                        <% end %>
                    </td>
                </tr>
                <% end %>

            </tbody>
        </table>

    </div>

</div>
