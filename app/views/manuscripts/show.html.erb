<div class="row">
    <div class="col-sm-3">
        <div class="panel panel-default show-tools">
            <div class="panel-heading">
                Tools
            </div>
            <div class="panel-body">
                <ul class="nav">
                    <% if user_signed_in? %>
                    <li class="edit_entry">
                        <a href="<%= edit_manuscript_path(@manuscript.id) %>">Edit this manuscript</a>
                    </li>

                    <li class="manage_entry">
                        <a href="<%= manage_entries_manuscript_path(@manuscript.id) %>">Manage entries</a>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        
        <div class="row">
            <div class="col-sm-12">
                <h2><%= @manuscript.public_id %></h2>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2">Manuscript Details</th>
                </tr>
            </thead>
            <tbody>

                <% if @manuscript.name.present? %>
                <tr>
                    <td class="col-sm-2 text-right record-label">Name</td>
                    <td class="col-sm-10">
                        <%= @manuscript.name %>
                    </td>
                </tr>
                <% end %>

                <% if @manuscript.location.present? %>
                <tr>
                    <td class="col-sm-2 text-right record-label">Last Known Location</td>
                    <td class="col-sm-10">
                        <%= @manuscript.location %>
                    </td>
                </tr>
                <% end %>

                <tr>
                    <td class="col-sm-2 text-right record-label"># Entries</td>
                    <td class="col-sm-10">
                        This manuscript has <a href="<%= search_advanced_url('manuscript' => @manuscript.public_id) %>"><%= @manuscript.entries.count %> entries</a> in the database.
                    </td>
                </tr>

            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2"><b>Composite provenance</b></th>
                </tr>
            </thead>
            <tbody>

                <% @manuscript.all_provenance.each do |provenance| %>
                <tr>
                    <td class="col-sm-2 text-right record-label"><%= format_fuzzy_date(provenance.start_date)||"(no date)" %></td>
                    <td class="col-sm-10">
                        <a href="<%= url_for provenance.entry %>"><%= provenance.entry.public_id %></a>:
                        <% if (seller_or_holder = provenance.get_seller_or_holder).present? && seller_or_holder.agent.present? %>
                        <a href="<%= url_for seller_or_holder.agent %>"><%= seller_or_holder.agent.name %></a><br/>
                        <% end %>
                    </td>
                </tr>
                <% end %>

            </tbody>
        </table>

        <% if (manuscript_comments = @manuscript.manuscript_comments).present? %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2"><b>Comments</b></th>
                </tr>
            </thead>
            <tbody>
                <% manuscript_comments.each do |manuscript_comment| %>
                <tr>
                    <td class="col-sm-2 text-right record-label">
                        By <%= render partial: "shared/username_with_profile_link", locals: { user: manuscript_comment.created_by } %><br/>
                        At <%= manuscript_comment.created_at.strftime("%Y-%m-%d %I:%M%P") %>
                    </td>
                    <td class="col-sm-10">
                        <%= manuscript_comment.comment||"(none)" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <% end %>

        <% if user_signed_in? %>
        <%= form_for ManuscriptComment.new(manuscript: @manuscript) do |f| %>
        <%= f.hidden_field :manuscript_id %>
        <input type="hidden" name="return_url" value="<%= manuscript_path @manuscript %>"/>
        <div class="row">
            <div class="col-sm-12 form-group">
                <h4>Leave a comment</h4>
                <%= f.text_area :comment, class: "form-control", rows: 5 %>
            </div>
            <div class="col-sm-12 text-right">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
        <% end %>
        <% end %>

    </div>

</div>
