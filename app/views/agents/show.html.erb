<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
        
        <div class="row">
            <div class="col-sm-12">
                <h2><%= @agent.get_public_id %></h2>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-12" colspan="2"><b>Provenance Agent Details</b></th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td class="col-sm-2 text-right record-label">Name</td>
                    <td class="col-sm-10">
                        <%= @agent.name %>
                    </td>
                </tr>

                <% if @agent.viaf_id.present? %>
                <tr>
                    <td class="col-sm-2 text-right record-label">VIAF ID</td>
                    <td class="col-sm-10">
                        <a href="http://viaf.org/viaf/<%= @agent.viaf_id %>/"><%= @agent.viaf_id %></a>
                    </td>
                </tr>
                <% end %>

                <tr>
                    <td class="col-sm-2 text-right record-label"># Transactions</td>
                    <td class="col-sm-10">
                        <!-- TODO: we need to expose a Transaction Agent facet for this to work -->
                        This agent is found in the transactions of <a href="TODO"><%= @agent.events.transactions.count %> entries</a>.
                    </td>
                </tr>

                <tr>
                    <td class="col-sm-2 text-right record-label"># Provenance</td>
                    <td class="col-sm-10">
                        This agent is found in the provenance of <a href="<%= search_by_facet_value('provenance_facet', @agent.name) %>"><%= @agent.events.provenance.count %> entries</a>.
                    </td>
                </tr>

                <tr>
                    <td class="col-sm-2 text-right record-label"># Sources</td>
                    <td class="col-sm-10">
                        <!-- TODO: we need to expose a Source Agent facet for this to work -->
                        This agent is found in <a href="TODO"><%= @agent.sources.count %> sources</a>.
                    </td>
                </tr>

                <tr>
                    <td class="col-sm-2 text-right record-label"></td>
                    <td class="col-sm-10">
                        TODO: Other details will be displayed here eventually.
                    </td>
                </tr>

            </tbody>
        </table>

    </div>

</div>
