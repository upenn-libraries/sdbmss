<%= form_tag("/comments/#{comment.id}", method: :patch, class: 'hide comment-toggle' ) do %>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= hidden_field_tag 'id', comment.id %>
      <%= hidden_field_tag 'commentable_id', comment.commentable_id %>
      <%= hidden_field_tag 'commentable_type', comment.commentable_type %>
      <%= text_area_tag 'comment', comment.comment, class: "form-control", rows: 5 %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10"></div>
    <div class="col-sm-2 text-right">
      <%= submit_tag 'Confirm', class: 'btn btn-default btn-lg' %>
    </div>
  </div>
<% end %>