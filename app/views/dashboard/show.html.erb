<% content_for :control_tools do %>
    <%= render partial: 'control_tools' %>
<% end %>

<%= stylesheet_link_tag "extras", media: "all" %>
<% @page_title = "Dashboard - " + application_name %>

<% is_contributor = current_user.role == 'contributor' %>
<% possessive = is_contributor ? "Your" : "" %>

<div class="row">
    <div class="col-sm-12">
        <div class="well">
            <div class="row">
                <div class="col-sm-12">
                    <span class='h2'>Welcome, <%= current_user.to_s %>!</span>            
                </div>
                <div class="col-sm-12">
                    <ul class="list-inline">
                        <li><strong class='label label-primary label-lg'><span class="glyphicon glyphicon-tag"></span> Tags:</strong></li>                        
                        <% if current_user.tags.count <= 0 %>
                            <li>
                                <span class="text-muted">You do not have any tags yet.</span>
                            </li>
                        <% end %>
                    <% current_user.tags.each do |tag| %>
                        <li>
                            <%= link_to(bookmarks_path(tag: tag[0])) do %>
                                <%= "#{tag[0]} (#{tag[1]})" %>
                            <% end %>
                        </li>
                    <% end %>
                    </ul>
                </div>
            </div>            
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <ul id='dashboard-tabs' class="ajax-tabs nav nav-tabs dashboard-tabs">
            <li class='active'><a data-toggle='tab' href="#my_activity">My Contributions</a></li>
            <li><a data-toggle='tab' href="#community" href="">Activity</a></li>
            <!--<li><a data-toggle='tab' href="#groups" data-url="/groups/show_all">Groups</a></li>
            <li><a data-toggle='tab' href="#notifications">Notifications</a></li>-->
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="tab-content">
            <div id="my_activity" class="tab-pane fade in active">
                <%= render partial: "my_entries" %>
                <%= render partial: "my_sources" %>                        
                <%= render partial: "my_manuscripts" %>                
            </div>
            <div id="community" class="tab-pane fade">
                <div class="row">
                    <div class="col-sm-2">
                        <%= render partial: "activities/nav" %>
                    </div>
                    <div class="col-sm-10" id="activity-pane">
                        <%= render partial: "activities/show_all" %>                       
                    </div>
                </div>
            </div>
            <!--
            <div id="groups" class="tab-pane fade">
            </div>
            <div id="notifications" class="tab-pane fade">
                <%# render partial: "notifications/index" %>
            </div>-->
        </div>
    </div>
</div>

<script>
$('.ajax-tabs').on('click','a',function (e) {
    e.preventDefault();
    var url = $(this).attr("data-url");

    if (typeof url !== "undefined") {
        var tab = $(this), href = this.hash;
        // ajax load from data-url
        $(href).load(url,function(result){      
            tab.tab('show')
        });
    } else {
        $(this).tab('show');
    }
});
</script>