<%= stylesheet_link_tag "extras", media: "all" %>
<% @page_title = "Dashboard - " + application_name %>

<% is_contributor = current_user.role == 'contributor' %>
<% possessive = is_contributor ? "Your" : "" %>

<div class="row">
    <div class="col-sm-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-4">
                        <div class="panel panel-default text-center" style="margin: 0px;">
                            <div class="panel-body"><span class="glyphicon glyphicon-user"></span></div>
                        </div>
                    </div>
                    <div class="col-xs-8">
                        <%= render partial: "shared/username_with_profile_link", locals: {user: current_user} %><br>
                        <span class="text-muted">User Level: <em><%= current_user.role %></em></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="nav nav-tabs dashboard-tabs">
            <li><a data-toggle='tab' href="#my_activity">My Activity</a></li>
            <li class='active'><a data-toggle='tab' href="#community" href="">Community</a></li>
            <li><a data-toggle='tab' href="#groups">Groups</a></li>
            <li><a data-toggle='tab' href="#notifications">Notifications</a></li>
            <li><a data-toggle='tab' href="#bookmarks">Bookmarks</a></li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="tab-content">
            <div id="my_activity" class="tab-pane fade">
                <div class="row">
                    <div class="col-sm-12">
                        <%= render partial: "my_entries" %>
                    </div>
                    <div class="col-sm-12">
                        <%= render partial: "my_sources" %>                        
                    </div>
                    <div class="col-sm-12">
                        <%= render partial: "my_manuscripts" %>
                    </div>
                </div>
            </div>
            <div id="community" class="tab-pane fade in active">
                <ul class="list-group list-group-no-border">
                    <%= render partial: "activities/more" %>                       
                </ul>
            </div>
            <div id="groups" class="tab-pane fade">
            </div>
            <div id="notifications" class="tab-pane fade">
                <%= render partial: "notifications/index" %>
            </div>
            <div id="bookmarks" class="tab-pane fade">
            </div>
        </div>
    </div>
</div>