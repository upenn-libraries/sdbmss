<% content_for :breadcrumbs do %>
    <li class="breadcrumb list-group-item active">
      <a href="/downloads">Exports</a>
    </li>
<% end %>

<div class="row">
  <div class="col-sm-12">
    <h2 class='text-center'>Exports</h2>
    <ul class="list-group">
      <% if @downloads.count <= 0 %>
        <li class='list-group-item'>You have no downloads available.</li>
      <% end %>
      <% @downloads.each do |d| %>
        <li class="list-group-item <%= d.status.to_i <= 0 ? 'list-group-item-warning' : ''%><%= d.status.to_i == 2 ? 'disabled' : '' %>">
          <div class="row">
            <div class="col-sm-3">
              <span class="h4">
                <%= link_to(download_path(d)) do %>
                  <%= d.filename %>
                <% end %>
              </span>
            </div>
            <div class="col-sm-3">
              <span class="h4">
                <%= link_to(download_path(d)) do %>
                  <span class="glyphicon glyphicon-floppy-save"></span>
                <% end %>
                <%= link_to(delete_download_path(d), data: {:confirm => 'Are you sure?'}) do %>
                  <span class="glyphicon glyphicon-trash"></span>
                <% end %>
              </span>
            </div>
            <div class="col-sm-3 text-center">
              <%= d.created_at.to_formatted_s(:long) %>
            </div>
            <div class="col-sm-3 text-center">
              <span class="text-danger">Expires: <%= (d.created_at + 1.days).to_formatted_s(:long) %></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>