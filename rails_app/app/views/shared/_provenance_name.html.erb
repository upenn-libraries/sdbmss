<%# renders verbose text string for the name portion of the Provenance record %>

<% if provenance.provenance_agent.present? && provenance.observed_name %>
  <a href="<%= url_for provenance.provenance_agent %>"><%= provenance.provenance_agent.name %></a> (as <%= provenance.observed_name %>)
<% elsif provenance.provenance_agent.present? %>
  <a href="<%= url_for provenance.provenance_agent %>"><%= provenance.provenance_agent.name %></a>
<% elsif provenance.observed_name.present? %>
  <%= provenance.observed_name %>
<% else %>
  <span class="text-muted">No agent or name information recorded.</span>
<% end %>
<%= provenance.certainty_flags %>

<% if provenance.comment %>
<br/><%= provenance.comment %>
<% end %>