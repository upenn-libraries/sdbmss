version: "3.8"

services:
  jena:
    image: "{{ jena_image_name }}:{{ jena_image_tag }}"
    deploy:
      placement:
        constraints:
          - "node.labels.jena == true"
      update_config:
        order: "start-first"
        parallelism: 1
      replicas: 1
      labels:
        - "traefik.enable=true"
        - "traefik.docker.network=traefik"
        - "traefik.http.services.jena-svc.loadbalancer.server.port={{ jena_port }}"
        - "traefik.http.middlewares.jena_stripprefix.stripprefix.prefixes=/sparql"
        {% if is_development == true %}
        # HTTP router (dev)
        - "traefik.http.routers.jena.entrypoints=web"
        - "traefik.http.routers.jena.rule=Host(`{{ app_url }}`) && (Path(`/sparql`) || PathPrefix(`/sparql/`))"
        - "traefik.http.routers.jena.middlewares=jena_stripprefix"
        - "traefik.http.routers.jena.service=jena-svc"
        - "traefik.http.routers.jena.priority=100"

        # HTTPS redirect (dev)
        - "traefik.http.routers.jena_httpsredir.entrypoints=web"
        - "traefik.http.routers.jena_httpsredir.rule=Host(`{{ app_url }}`) && (Path(`/sparql`) || PathPrefix(`/sparql/`))"
        - "traefik.http.routers.jena_httpsredir.middlewares=jena_https"
        - "traefik.http.middlewares.jena_https.redirectscheme.scheme=https"
        - "traefik.http.middlewares.jena_https.redirectscheme.permanent=true"

        # HTTPS router (dev)
        - "traefik.http.routers.jena-secure.entrypoints=websecure"
        - "traefik.http.routers.jena-secure.rule=Host(`{{ app_url }}`) && (Path(`/sparql`) || PathPrefix(`/sparql/`))"
        - "traefik.http.routers.jena-secure.middlewares=jena_stripprefix"
        - "traefik.http.routers.jena-secure.tls=true"
        - "traefik.http.routers.jena-secure.tls.certresolver=letsencrypt"
        - "traefik.http.routers.jena-secure.service=jena-svc"
        - "traefik.http.routers.jena-secure.priority=100"
        {% else %}
        # HTTP router (prod)
        - "traefik.http.routers.jena.entrypoints=web"
        - "traefik.http.routers.jena.rule=Host(`{{ app_url }}`) && (Path(`/sparql`) || PathPrefix(`/sparql/`))"
        - "traefik.http.routers.jena.middlewares=jena_stripprefix"
        - "traefik.http.routers.jena.service=jena-svc"
        - "traefik.http.routers.jena.priority=100"
        {% endif %}
    environment:
      ADMIN_PASSWORD: "{{ app_versioned_secrets.jena_admin_password.value }}"
    healthcheck:
      test:
        [
          "CMD-SHELL",
          "curl -sf http://127.0.0.1:{{ jena_port }}/$$/ping || curl -sf http://127.0.0.1:{{ jena_port }}/ || exit 1"
        ]
      interval: 30s
      timeout: 5s
      retries: 10
      start_period: 20s
    logging:
      driver: json-file
      options:
        max-file: "3"
        max-size: "10m"
    networks:
      - traefik
      - jena
    volumes:
      - rdf_data:/fuseki

networks:
  traefik:
    external: true
  jena:
    name: jena

volumes:
  rdf_data:
